<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_gor"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/outline_person_24" />

        <TextView
            android:id="@+id/txt_nama_gor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/img_gor"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama_gor"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_gor"
            android:text="@string/app_name"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama_gor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txt_tanggal"
            android:text="@string/app_name"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_harga_rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tanggal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_gor"
            android:text="Rp" />

        <TextView
            android:id="@+id/txt_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tanggal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txt_harga_rp"
            android:text="@string/app_name" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/outline_delete_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>